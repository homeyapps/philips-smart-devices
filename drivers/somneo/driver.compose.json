{
  "name": {
    "en": "Somneo Sleep & Wake-up Light"
  },
  "class": "sensor",
  "capabilities": [
    "measure_temperature",
    "measure_humidity",
    "measure_luminance",
    "measure_noise",
    "onoff.mainlight",
    "onoff.nightlight",
    "onoff.sunset",
    "onoff.relax_breathe",
    "onoff.bedtime_tracking",
    "dim",
    "button.polling",
    "button.reset",
    "media_input",
    "speaker_playing",
    "speaker_stop",
    "speaker_next",
    "speaker_prev",
    "speaker_artist",
    "speaker_album",
    "speaker_track",
    "volume_set"
  ],
  "capabilitiesOptions": {
    "onoff.mainlight": {
      "title": {
        "en": "Main Light"
      },
      "insightsTitleTrue": {
        "en": "Main light turned on"
      },
      "insightsTitleFalse": {
        "en": "Main light turned off"
      }
    },
    "onoff.nightlight": {
      "title": {
        "en": "Night Light"
      },
      "insightsTitleTrue": {
        "en": "Night light turned on"
      },
      "insightsTitleFalse": {
        "en": "Night light turned off"
      }
    },
    "onoff.sunset": {
      "title": {
        "en": "Sunset"
      },
      "insightsTitleTrue": {
        "en": "Sunset turned on"
      },
      "insightsTitleFalse": {
        "en": "Sunset turned off"
      }
    },
    "onoff.relax_breathe": {
      "title": {
        "en": "Relax Breathe"
      },
      "insightsTitleTrue": {
        "en": "RelaxBreathe turned on"
      },
      "insightsTitleFalse": {
        "en": "RelaxBreathe turned off"
      }
    },
    "onoff.bedtime_tracking": {
      "title": {
        "en": "Bedtime Tracking"
      },
      "insightsTitleTrue": {
        "en": "Bedtime tracking turned on"
      },
      "insightsTitleFalse": {
        "en": "Bedtime tracking turned off"
      }
    },
    "dim": {
      "min": 1,
      "max": 25,
      "step": 1,
      "units": { "en": "" }
    },
    "button.polling": {
      "maintenanceAction": true,
      "title": { "en": "Start/Stop Polling" },
      "desc": { "en":  "A feature of the Philips device is the rate limits for requests to the device itself, so in order to avoid reboots and still want to use the official app, please use this button to enable or disable polling." }
    },
    "button.reset": {
      "maintenanceAction": true,
      "title": { "en": "Factory Reset" },
      "desc": { "en":  "This option will completely reset your device to factory settings." }
    },
    "media_input": {
      "values": [
        {
          "id": "fmr",
          "title": { "en": "Radio" }
        },
        {
          "id": "aux",
          "title": { "en": "AUX" }
        }
      ]
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "discovery": "somneo-ssdp",
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "list_somneo_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_somneo_devices"
      }
    },
    {
      "id": "add_somneo_devices",
      "template": "add_devices"
    }
  ]
}
