{
  "name": {
    "en": "Somneo Sleep & Wake-up Light"
  },
  "class": "socket",
  "capabilities": [
    "measure_temperature",
    "measure_humidity",
    "measure_luminance",
    "measure_noise",
    "onoff.mainlight",
    "onoff.nightlight",
    "onoff.sunset",
    "onoff.relax_breathe",
    "onoff.bedtime_tracking",
    "dim",
    "button.reset"
  ],
  "capabilitiesOptions": {
    "onoff.mainlight": {
      "title": {
        "en": "Main Light"
      }
    },
    "onoff.nightlight": {
      "title": {
        "en": "Night Light"
      }
    },
    "onoff.sunset": {
      "title": {
        "en": "Sunset"
      }
    },
    "onoff.relax_breathe": {
      "title": {
        "en": "Relax Breathe"
      }
    },
    "onoff.bedtime_tracking": {
      "title": {
        "en": "Bedtime Tracking"
      }
    },
    "dim": {
      "min": 1,
      "max": 25,
      "step": 1,
      "units": { "en": "" }
    },
    "button.reset": {
      "maintenanceAction": true,
      "title": { "en": "Factory Reset" },
      "desc": { "en":  "This option will completely reset your device to factory settings." }
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "discovery": "somneo-ssdp",
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "list_somneo_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_somneo_devices"
      }
    },
    {
      "id": "add_somneo_devices",
      "template": "add_devices"
    }
  ]
}
